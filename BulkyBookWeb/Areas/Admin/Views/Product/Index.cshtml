<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;Create New Product
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width: 100%" id="product_table">
        <thead>
            <tr>
                <th>
                    Tile
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    Price
                </th>
                <th>
                    Author
                </th>
                <th>
                    Category
                </th>
                <th>
                    Operations
                </th>
            </tr>
        </thead>        
    </table>
</div>
@section Scripts {
    <script src="~/js/product.js"></script>
}