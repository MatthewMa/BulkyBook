@model IEnumerable<
    CoverType>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">CoverType List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;Create New CoverType
            </a>
        </div>
    </div>
    <br/><br/>
    <table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Name
            </th>            
            <th>
                Operations
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
		    <tr>
                <td width="80%">
                    @item.Name
                </td>               
                <td role="group" class="btn-group w-100">
                    <a asp-area="Admin" asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                    <a asp-area="Admin" asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>&nbsp;Delete</a>
                </td>
            </tr>
        }
    </tbody>
    </table> 
</div>
